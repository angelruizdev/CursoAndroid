<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activitys.ActivityFragmet"
    android:baselineAligned="false">

<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <Button
        android:id="@+id/btnFmtButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:onClick="opsion"
        android:text="B"/>
    <Button
        android:id="@+id/btnFmtCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:onClick="opsion"
        android:text="C"/>

</LinearLayout>
<!--esta etiqueta funciona como un contenedor, para mostrar los fragments en la activity estatica o dinamicamente-->
    <FrameLayout
        android:id="@+id/contentFmt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>


